{
  "name": "glyph-segregator",
  "version": "0.5.1",
  "description": "A new way to optimize web fonts for a specific site.",
  "repository": "https://github.com/ouuan/glyph-segregator",
  "author": "Yufan You",
  "license": "Apache-2.0",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "eslint . --ext .js,.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "release": "bumpp package.json --no-commit --no-push --no-tag && git commit -av && git push && pnpm build && pnpm publish"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "jsdom": "^21.1.0",
    "puppeteer": "^19.6.2",
    "puppeteer-cluster": "^0.23.0",
    "subset-font": "^2.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@ouuan/eslint-config-ts": "1.2.2",
    "@ouuan/tsconfig-base": "0.3.0",
    "@types/jsdom": "21.1.0",
    "@types/node": "18.13.0",
    "@types/subset-font": "1.4.0",
    "bumpp": "8.2.1",
    "csstype": "3.1.1",
    "eslint": "8.34.0",
    "tsup": "6.6.0",
    "typescript": "4.9.5",
    "vitest": "0.28.4"
  }
}
